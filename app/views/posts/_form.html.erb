<%= form_for @post do |form| %>
   <div class = "form-group">
    <%= form.label :upload_image %><br>
    <%= form.file_field :image, class: "form-control",accept: 'image/*png,image/gif,image/jpeg,image/jpg', null: false %> 
   </div>
   <div class = "form-group">
    <%= form.label :add_caption %><br>
    <%= form.text_area :description, class: "form-control" %>
   </div>
   <div class = "button">
      <%= form.submit "Save Post", class: "btn btn-success" %>
    </div> 

<% end %>