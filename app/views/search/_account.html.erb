<% if @posts.exists? or @accounts.exists? %>
   <h1>Users</h1>
 <% else %>
   <h1>Oop!  No users found...</h1>
 <% end %>

<div class = "account-summary">
<% @accounts.each do |account| %>
<div class = "recommended-follower">
    <div class = "row">
      <div class = "col-sm-3 col-2">
        <%= link_to profile_picture(account, 50, 50),profile_path(account.username) %>
      </div>
      <div class = "col-sm-9 col-10">
       <%= link_to account.username, profile_path(account.username), class: "text-dark" %>
       <p class = "text-muted"><%= account.created_at > 2.days.ago ? "New to Instagram" : "Followed by #{account.total_followers} Users" %>
     </div>
  </div>
  <% end %>
  </div>
